<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="sh.adelessfox.odradek.game.hfw.storage.StreamingObjectReader" level="INFO"/>
    <logger name="sh.adelessfox.odradek.viewer.model.viewport.Viewport" level="INFO"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
